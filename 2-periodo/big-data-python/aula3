base = float(input("Digite o valor da base"))
altura = float(input("Digite o valor da altura"))
area = (base * altura)
print(f"A área do retângulo: {area}")

base = float(input("Digite o valor da base"))
altura = float(input("Digite o valor da altura"))
area = (base * altura)/2
print(f"A área do triângulo: {area}")

raio = float(input("Digite o valor do raio"))
pi = 3.14
area = pi * (raio ** 2)
print(f"A área do círculo: {area}")

lado = float(input("Digite o valor do lado"))
area = (lado ** 2)
print(f"A área do quadrado: {area}")

valorProduto = float(input("Digite o valor do produto:"))
desconto = float(input("Digite o valor do desconto:"))
valorFinal = valorProduto - (valorProduto * desconto)/100
print(f"O valor do produto é: {valorFinal}")

idade = int(input('Digite sua idade: '))
if idade >= 18:
  print("Autorizado")
else:
  print("Não autorizado")

salario = float(input("Informe seu salário:"))
if salario <= 0:
  print("Parabéns, você é desempregado!")
elif salario <= 3000:
  print("Você é programador junior.")
elif salario > 3000 and salario <= 6000:
  print("Você é um programador pleno.")
elif salario > 6000 and salario <= 15000:
  print("Você é programador senior.")
else:
  print("Você é gerente de projetos.")

peso = float(input("Informe seu peso:"))
altura = float(input("Informe seu altura:"))
IMC = peso/(altura ** 2)
if IMC <= 18.5:
  print("Magreza.")
elif IMC > 18.5 and IMC <= 24.9:
  print("Normal.")
elif IMC > 24.9 and IMC <= 25.0:
  print("Sobrepeso.")
elif IMC > 25.0 and IMC <= 29.9:
  print("Obesidade.")
else:
  print("Obesidade grave.")

lista = [10, 20, 30, 40]
print(lista[0])
print(lista[1])
print(lista[2])
print(lista[3])

listaFrutas = ['Maçã', 'Banana', 'Uva', 'Morango', 'Manga']
print(listaFrutas[1])
print(listaFrutas[3])
print(listaFrutas[4])

listaVazia = []
listaVazia.append('Olá')
listaVazia.append('Mundo!')
print(listaVazia)
