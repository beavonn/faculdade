<!DOCTYPE html>
<html lang="pt-br">
<head>
    <script>
        function dividirNumeros() {
            let numero1 = parseInt(prompt("Digite o primeiro número inteiro positivo:"));
            let numero2 = parseInt(prompt("Digite o segundo número inteiro positivo:"));

            function dividirInteiros(a, b) {
                if (b === 0) {
                    return "Erro! A divisão por zero não é permitida.";
                }
                return a / b;
            }

            let resultado = dividirInteiros(numero1, numero2);
            alert("O resultado da divisão é igual a: " + resultado);
        }
    </script>
</head>
<body>
    <h1>Calculadora de Divisão</h1>
    <button onclick="dividirNumeros()">Clique aqui para dividir dois números</button>
</body>
</html>

